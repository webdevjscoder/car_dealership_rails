<div class='info-title'>
    <h1>Edit Transmission</h1>
</div>
<div class='info-form'>
    <%= form_for @transmission do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.submit "UPDATE", class: 'create-new-car-info' %>
    <% end %>
    <%= form_for @transmission, method: 'Delete' do |f| %>
        <%= f.submit 'DELETE', class: 'delete-car-info' %>
    <% end %>
</div>