<h1>Sign Up</h1>
<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
        <%= msg %><br>
    <% end %>
<% end%>

<%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>
    <%= f.label :email %>
    <%= f.email_field :email %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.submit %>
<% end %>