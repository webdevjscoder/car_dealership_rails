<div class='user-info-container'>
        <div class='user-info'>
        <h2>Edit Profile</h2>
            <%= form_for @user, :html => {:class => 'update-user-form'} do |f| %>
                <%= f.label :first_name %>
                <%= f.text_field :first_name %><br>
                <%= f.label :last_name %>
                <%= f.text_field :last_name %><br>
                <%= f.label :email %>
                <%= f.email_field :email %><br>
                <%= f.label :phone %>
                <%= f.text_field :phone, placeholder: '1+(500)-555-9595' %><br>
                <%= f.submit "UPDATE", class: 'update-user-btn'%>
            <% end %>
            <%= form_for @user, method: 'Delete' do |f| %>
                    <%= f.submit 'DELETE', data: { confirm: "Are you sure you want to delete profile?" }, class: 'delete-user-btn' %>
            <% end %>
        </div>
</div>